name: CI

on:
  push:
    branches-ignore:
      - main
  pull_request:
    branches:
      - main
  workflow_dispatch:

jobs:
  build:
    runs-on: ubuntu-latest
    strategy:
      matrix:
        node-version: [20.x, 22.x]
    steps:
      - uses: actions/checkout@v4
      {{> installDepsPartial nodeVersion="${{ matrix.node-version }}" }}
      
      - name: Lint
        run: |
          {{#if (eq packageManager "npm")}}
          npm run lint --if-present
          {{else if (eq packageManager "pnpm")}}
          pnpm lint --if-present
          {{/if}}

      - name: Run tests
        run: |
          {{#if (eq packageManager "npm")}}
          npm test --if-present
          {{else if (eq packageManager "pnpm")}}
          pnpm test --if-present
          {{/if}}

      - name: Build
        run: |
          {{#if (eq packageManager "npm")}}
          npm run build --if-present
          {{else if (eq packageManager "pnpm")}}
          pnpm build --if-present
          {{/if}}
