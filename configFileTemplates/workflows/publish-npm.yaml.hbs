name: Publish-npm

on:
  release:
    types: [published]
  workflow_dispatch:

jobs:
  publish:
    runs-on: ubuntu-24.04
    steps:
      - uses: actions/checkout@v4

      {{> installDepsPartial nodeVersion="22.x" registryUrl="https://registry.npmjs.org" }}

      - name: Build
        run: |
          {{#if (eq packageManager "npm")}}
          npm run build
          {{else if (eq packageManager "pnpm")}}
          pnpm run build
          {{/if}}
      
      - name: Publish package
        env:
          NODE_AUTH_TOKEN: ${{encloseInDoubleCurly "secrets.NPM_TOKEN"}}
        run: |
          {{#if (eq packageManager "npm")}}
          npm publish
          {{else if (eq packageManager "pnpm")}}
          pnpm publish --no-git-checks
          {{/if}}
