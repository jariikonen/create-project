{
  "include": ["configurationScripts/**/*"],
  "compilerOptions": {
    "target": "ES2022",
    "module": "preserve",
    "lib": ["ES2022"],
    "skipLibCheck": true,
    "outDir": "./dist/configurationScripts",
    "rootDir": "./configurationScripts", 

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "erasableSyntaxOnly": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedSideEffectImports": true,

    /* Debugging */
    "sourceMap": true,
    "inlineSources": true,
    "inlineSourceMap": false,
  }
}
